<%= render "shared/header" %>
  <div class="wrapper">
   <div class="writer-img">
      <%= image_tag @write.image.variant(gravity: :center, resize:"150x150^", crop:"150x150+0+0").processed,
       class: 'writer-image' if @write.image.attached? %>
   </div> 
    <div class="article-name">
      <%= @write.name %>
    </div>
     <div class="article-text">
       <%= link_to image_tag("twitter.png"), "#{@write.twitter}",target: :_blank %>
    <%= link_to image_tag("blog.png"), "#{@write.blog}" ,target: :_blank%>
    </div>
        <div class="article-text">
      <%= @write.text %>
    </div>
		<% if user_signed_in? && current_user.admin? %>
     			 <%= link_to '削除', write_path(@write.id), method: :delete %> 
           <%= link_to '編集', edit_write_path(@write.id), method: :get %> 
    <% end %>

    </div>
    <%= render "shared/footer" %>
