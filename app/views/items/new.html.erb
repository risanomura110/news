 <div class="new">
    <%= form_with model: @item, url:items_path, local: true do |f| %>
    <h3>
    記事を投稿する
    </h3>
    <div>
    <%= f.file_field :image, id:"item-image" %>
    </div>
    <div>
    <%= f.text_field :name, placeholder: "著者名" %>
    </div>
    <div>
    <%= f.text_field :title, placeholder:"タイトル" %>
    </div>
    <div>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
    </div>
    <div>
    <%= f.text_area :text, placeholder:"本文" %>
    </div>
    <div>
    <%= f.submit "投稿する" ,class:"btn" %>
    </div>
    <% end %>
</div>
